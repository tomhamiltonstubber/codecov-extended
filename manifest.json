{
  "manifest_version": 3,
  "name": "CodeCov Extended",
  "description": "Some useful tools to help with CodeCov",
  "version": "0.1",
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "js": [
        "scripts/main.js"
      ],
      "css": [
        "css/styles.css"
      ],
      "matches": [
        "https://app.codecov.io/*"
      ]
    }
  ]
}
